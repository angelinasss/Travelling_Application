@model Travelling_Application.ViewModels.LoginModel
@{
    ViewData["Title"] = "Booking.com";
}

<main class="form-signin w-100 m-auto text-center">
<form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
    <h1 class="h3 mb-3 fw-normal">Please sign in</h1>
        <div asp-validation-summary="All" class="text-danger"></div>
    <div>
        <div class="form-floating">
            <input asp-for="UserName" class="form-control" id="floatingInput" placeholder="UserName" />
            <label asp-for="UserName">UserName</label>
        </div>
         <div class="form-floating">
                <input asp-for="Password" type="password" class="form-control" id="floatingPassword" placeholder="Password" />
                <label asp-for="Password">Password</label>
        </div>
        <div class="form-check text-start my-3">
            <input class="form-check-input" type="checkbox" value="remember-me" id="flexCheckDefault">
            <label class="form-check-label" for="flexCheckDefault">
                Remember me
            </label>
        </div>
        <div class="form-group text-start my-3">
        <a asp-action="Register" asp-controller="Account">Create new account</a>
            </div>
        <input type="submit" value="Sign in" class="btn btn-primary w-100 py-2" />
     
        <p class="mt-5 mb-3 text-body-secondary">&copy; 2021–2024</p>
    </div>
</form> 
</main>