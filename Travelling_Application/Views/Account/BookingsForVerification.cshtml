                                                    <h5>Type Of Room:</h5>
                                                    <span class="mini-info-item"> @Model.BookingAccomodation[ii].TypeOfRoom</span>
                                                    <h5>Count Of Rooms:</h5>
                                                    <span class="mini-info-item"> @Model.BookingAccomodation[ii].Adults</span>
                                                    <h5>Traveller Data:</h5>
                                                    <span class="mini-info-item"> Name: @Model.UsersDataAccomodation[ii].Name</span>
                                                    <span class="mini-info-item"> Email: @Model.UsersDataAccomodation[ii].Email</span>
                                                    <span class="mini-info-item"> PhoneNumber: @Model.UsersDataAccomodation[ii].PhoneNumber</span>
                                                    <form id="rejectAccomodationBooking_@Model.BookingAccomodation[ii].id" asp-action="RejectAccomodationBooking" asp-controller="Account" asp-anti-forgery="true" enctype="multipart/form-data" method="post" onsubmit="return validateAccomodationRejectedMessage(@Model.BookingAccomodation[ii].id)">
                                                        <textarea class="form-control" id="rejectedMessageAccomodation_@Model.BookingAccomodation[ii].id" name="RejectedMessageAccomodation" placeholder="If you want to reject booking for this object, enter the reason" rows="4" style="margin-top: 10px; margin-bottom: 20px; width: 72%; margin-left: 75px;"></textarea>
                                                        <div id="notification___@Model.BookingAccomodation[ii].id" class="text-danger" style="display:none; margin-bottom: 20px; margin-left: 150px; width: 50%;"></div>
                                                        <input type="hidden" name="rejectAccomodationId" value="@Model.BookingAccomodation[ii].id" />
                                                        <button class="btn btn-danger" type="submit" style="margin-left: 60px;">Reject</button>
                                                    </form>
                                                    <form asp-action="VerifyAccomodationBooking" asp-controller="Account" asp-anti-forgery="true" enctype="multipart/form-data" style="display: inline-block;" method="post">
                                                        <input type="hidden" name="verifyAccomodationId" value="@Model.BookingAccomodation[ii].id" />
                                                        <button class="btn btn-success" type="submit" style="margin-right: 90px; margin-top: -65px;">Verify</button>
                                                    </form>
                                                    
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    ii++;
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</main>