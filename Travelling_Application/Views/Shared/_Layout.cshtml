<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="icon" href="~/Views/Shared/favicon.ico" type="image/x-icon">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Travelling_Application</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Travelling_Application.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    @await RenderSectionAsync("styles", required: false)

    <style>

        .navbar {
            background: linear-gradient(to right, #6dd5fa, #2980b9); /* Градиент */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        }

        .navbar-brand, .nav-link {
            font-family: 'Poppins', sans-serif;
            font-weight: 600;
            color: #ffffff !important;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
            font-size: 1.2em;
        }

        .navbar-toggler-icon {
            filter: invert(1);
        }

        .navbar-toggler {
            border: none;
        }

        .custom-brand {
            font-weight: 600;
            font-family: 'Poppins', sans-serif;
            font-size: 1.7em;
            color: #ffffff;
        }

        .custom-brandd {
            font-weight: 600;
            font-family: 'Poppins', sans-serif;
            color: #ffffff;
        }

        .list-group-item {
            font-family: 'Poppins', sans-serif;
            font-weight: 600;
            color: #2c3e50; /* Основной цвет шрифта */
            background-color: #60c2e5; /* Светлый цвет, сочетающийся с градиентом */
            border: none;
            margin-bottom: 5px;
            transition: background-color 0.3s ease, color 0.3s ease; /* Добавлено изменение цвета шрифта */
        }

            .list-group-item:hover {
                background-color: #79d4f0; /* Светлый оттенок для hover */
                color: #ffffff; /* Цвет шрифта при наведении курсора */
            }

            .list-group-item.active {
                background-color: #60c2e5; /* Светлый цвет */
                border-color: #60c2e5; /* Светлый цвет */
                color: #ffffff; /* Цвет шрифта для активного элемента */
            }

        .bookings-title {
            font-size: 2em;
            color: #ffffff; /* Цвет шрифта изменён на белый */
            text-align: center;
            padding: 20px;
            background: linear-gradient(to right, #6dd5fa, #2980b9);
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            text-transform: uppercase;
            letter-spacing: 1.5px;
        }

        .btn-primary {
            background-color: #60c2e5 !important; /* Светлый цвет фона */
            border-color: #60c2e5 !important; /* Светлый цвет бордюра */
            color: #ffffff !important;
            padding: 10px 20px !important;
            font-size: 1rem !important;
            border-radius: 30px !important;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2) !important;
            transition: background-color 0.3s, transform 0.3s !important;
        }

            .btn-primary:hover {
                background-color: #0056b3 !important;
                transform: scale(1.05) !important;
            }

            .btn-primary:focus,
            .btn-primary:active {
                background-color: #004085 !important;
                border-color: #004085 !important;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3) !important;
            }

        .btn-primar {
            background-color: #60c2e5; /* Светлый цвет фона */
            border-color: #60c2e5; /* Светлый цвет бордюра */
            color: #ffffff;
            padding: 10px 20px;
            font-size: 1rem;
            border-radius: 30px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            transition: background-color 0.3s, transform 0.3s;
        }

            .btn-primar:hover {
                background-color: #0056b3;
                color: #ffffff;
                transform: scale(1.05);
            }

            .btn-primar:focus,
            .btn-primar:active {
                background-color: #004085;
                border-color: #004085;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3);
            }

        .btn-danger {
            background-color: #ffb6c1 !important; /* Нежно-розовый цвет фона */
            border-color: #ffb6c1 !important; /* Нежно-розовый цвет бордюра */
            color: #ffffff !important;
            padding: 10px 20px !important;
            font-size: 1rem !important;
            border-radius: 30px !important;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2) !important;
            transition: background-color 0.3s, transform 0.3s !important;
        }

            .btn-danger:hover {
                background-color: #ff0000 !important; /* Насыщенный красный при наведении */
                transform: scale(1.05) !important;
            }

            .btn-danger:focus,
            .btn-danger:active {
                background-color: #ff5274 !important; /* Ещё более насыщенный розовый при фокусе/активации */
                border-color: #ff5274 !important;
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.3) !important;
            }

        .car-title {
            margin-top: 0;
        }

            .car-title a {
                color: #60c2e5; /* Начальный цвет ссылки */
            }

                .car-title a:hover {
                    color: #2980b9; /* Цвет ссылки при наведении курсора */
                }

        .attraction-title {
            margin-top: 0;
        }

            .attraction-title a {
                color: #60c2e5; /* Начальный цвет ссылки */
            }

                .attraction-title a:hover {
                    color: #2980b9; /* Цвет ссылки при наведении курсора */
                }

        .accomodation-title {
            margin-top: 0;
        }

            .accomodation-title a {
                color: #60c2e5; /* Начальный цвет ссылки */
            }

                .accomodation-title a:hover {
                    color: #2980b9; /* Цвет ссылки при наведении курсора */
                }

    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light text-white border-bottom box-shadow mb-3">
            <div class="container-fluid d-flex justify-content-between align-items-center">
                <a class="navbar-brand custom-brand" style="margin-right: 150px;" asp-area="" asp-controller="Home" asp-action="Index">TravelHaven</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link custom-brandd" asp-area="" asp-controller="Home" asp-action="Index"><i class="fas fa-bed"></i> Stays</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link custom-brandd" asp-area="" asp-controller="Home" asp-action="SearchFlights"><i class="fas fa-plane"></i> Flights</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link custom-brandd" asp-area="" asp-controller="Home" asp-action="SearchCars"><i class="fas fa-car"></i> Car rentals</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link custom-brandd" asp-area="" asp-controller="Home" asp-action="SearchAttractions"><i class="fas fa-map-marker-alt"></i> Attractions</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link custom-brandd" asp-area="" asp-controller="Account" asp-action="Login">Sign In</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link custom-brandd" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
                            </li>
                        }
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link custom-brandd" asp-area="" asp-controller="Account" asp-action="ViewProfile">Welcome, @User.Identity.Name!</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link custom-brandd" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-5">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container">
            &copy; 2024 - TravelHaven.com
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="https://kit.fontawesome.com/26f99e553e.js" crossorigin="anonymous"></script>
</body>
</html>
