<!DOCTYPE html>
<html lang="en">
<head>
    <link rel="icon" href="~/Views/Shared/favicon.ico" type="image/x-icon">
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Travelling_Application</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Travelling_Application.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    @await RenderSectionAsync("styles", required: false)

    <style>
        .custom-brand {
            font-weight: bold; /* Делает текст жирным */
            font-family: 'Arial', sans-serif; /* Пример шрифта, можно заменить на другой */
            font-size: 1.5em; /* Увеличивает размер текста */
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5); /* Добавляет тень для красоты */
            color: #ffffff; /* Убедитесь, что текст остается белым */
        }

        .custom-brandd {
            font-weight: bold; /* Делает текст жирным */
            font-family: 'Arial', sans-serif; /* Пример шрифта, можно заменить на другой */
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.5); /* Добавляет тень для красоты */
            color: #ffffff; /* Убедитесь, что текст остается белым */
        }
    </style>


</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-primary text-white border-bottom box-shadow mb-3">
            <div class="container-fluid d-flex justify-content-between align-items-center">
                <a class="navbar-brand text-white custom-brand" style="margin-right: 150px;" asp-area="" asp-controller="Home" asp-action="Index">TravelHaven</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-white custom-brandd" asp-area="" asp-controller="Home" asp-action="Index"><i class="fas fa-bed"></i> Stays</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white custom-brandd" asp-area="" asp-controller="Home" asp-action="SearchFlights"><i class="fas fa-plane"></i> Flights</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white custom-brandd" asp-area="" asp-controller="Home" asp-action="SearchCars"><i class="fas fa-car"></i> Car rentals</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white custom-brandd" asp-area="" asp-controller="Home" asp-action="SearchAttractions"><i class="fas fa-map-marker-alt"></i> Attractions</a>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white custom-brandd" asp-area="" asp-controller="Account" asp-action="Login">Sign In</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white custom-brandd" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
                            </li>
                        }
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white custom-brandd" asp-area="" asp-controller="Account" asp-action="ViewProfile">Welcome, @User.Identity.Name!</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white custom-brandd" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-5">
            @RenderBody()
        </main>
    </div>

    <footer class="footer text-muted">
        <div class="container">
            &copy; 2024 - TravelHaven.com
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
    <script src="https://kit.fontawesome.com/26f99e553e.js" crossorigin="anonymous"></script>
</body>
</html>
